{
    "manifest_version": 3,
    "name": "Custom Text Tools",
    "version": "1.0",
    "description": "Add custom context menu options for text selection.",
    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": "icon48.png",
      "default_title": "Custom Text Tools"
    },
    "icons": {
      "48": "icon48.png"
    }
  }
  